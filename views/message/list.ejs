<% include ../public/header.ejs %>
<% include ../public/public_header.ejs %>
<% include ../public/menu.ejs %>
<section id="content">
	<section class="vbox">
		<section class="scrollable padder">
			<div class="m-b-md">
				
			</div>
			<section class="panel panel-default">
			<header class="panel-heading"> <i class="fa fa-envelope-o"> 消息列表 </i></header>
			<div class="table-responsive">
				<table class="table" data-ride="datatables" id="datatables">
					<thead>
						<tr>
							<th style="width:10%"></th>
							<th style="width:15%">发件人</th>
							<th style="width:15%">主题</th>
							<th style="width:30%">内容</th>
							<th style="width:15%">时间</th>
						</tr>
					</thead>
					<tbody>
						<% for (var i in result) { %>
						<tr>
							<th style="width:10%"></th>
							<th style="width:15%"><%=result[i].sender%></th>
							<th style="width:15%"><%=result[i].title%></th>
							<th style="width:30%"><%=result[i].content%></th>
							<th style="width:15%"><%=result[i].created%></th>
						</tr>
						<% } %>
					</tbody>
				</table>
			</div>
		</section>
	</section>
</section>
</section>
<% include ../public/footer.ejs %>