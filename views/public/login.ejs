<script type="text/javascript">
    $("#form1").submit(function() {
    $("#title").hide();
    $.ajax({
      url: "/login",
      type: "post",
      data: $(this).serialize(),
      dataType: "json",
      success: function(data) {
        console.log(data)
        if (data.response == "success") {
          setTimeout("window.location.href =\"" + data.more + "\"", 1);
        }else{
            $("#title").html(data.msg);
            $("#title").show();
            $( "#title" ).effect( "shake",null,"slow" );
        }
      }
    });
    return false;
  });
</script>
