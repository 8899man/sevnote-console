<section id="content">
  <section class="vbox">
    <section class="scrollable wrapper">
      <div class="panel b-a">
        <header class="panel-heading bg-primary text-right bg-light">
          <ul class="nav nav-tabs pull-left">
            <li class="active"><a href="#profile_basic" data-toggle="tab"><i class="fa fa-user text-muted"></i> 基本信息</a></li>  
            <li ><a href="#profile_security" data-toggle="tab"><i class="fa fa-life-ring text-muted"></i> 安全</a></li>
          </ul>
        <span class="hidden-sm">我的账户</span> </header>
        <div class="panel-body">
          <div class="tab-content">
            <div class="tab-pane fade active in" id="profile_basic">
              
              <div class="clearfix"> <a href="#" class="pull-left thumb-md avatar b-3x m-r"> <img src="<%=avatars%>" alt="..."> </a></div></br>
              <form role="form">
                <div class="form-group">
                  <label>Email</label>
                  <input type="user_email" class="form-control" placeholder="<%=account%>" Disabled>
                </div>
                <div class="form-group">
                  <label>用户名</label>
                  <input type="text" class="form-control" value="<%=user.user_name%>" Disabled>
                </div>
                    <div class="form-group">
                  <label>密码</label>
                  <input type="password" class="form-control" value="<%=user.user_pwd%>">
                </div>
                  <div class="form-group">
                  <label>确认密码</label>
                  <input type="password" class="form-control" value="<%=user.user_pwd%>">
                </div>
                  <div class="form-group">
                  <label>手机</label>
                  <input type="text" class="form-control" value="<%=user.user_phone%>">
                </div>
                  <div class="form-group">
                  <label>QQ</label>
                  <input type="text" class="form-control" value="<%=user.user_qq%>">
                </div>
                  <div class="form-group">
                  <label>公司名</label>
                  <input type="text" class="form-control" value="<%=user.company_name%>">
                </div>
                 <div class="form-group">
                  <label>职位</label>
                  <input type="text" class="form-control" value="<%=user.user_position%>">
                </div>
                  <div class="form-group" >
                  <label>地址</label>
                  <input type="text" class="form-control" value="<%=user.user_address%>">
                </div>
                <button type="submit" class="btn btn-sm btn-primary">更新资料</button>
              </form>
            </div>
            <div class="tab-pane fade  in" id="profile_security">profile_security</div>
          </div>
        </div>
      </div>
    </section>
  </section>
</section>
